<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.HomeActivity"
    android:background="@color/bg_color">

    <!--TODO Colocar nome do usuário User.getName()-->
    <!--PERGUNTAR COMO SALVAR DADOS DO USUARIO NO FIREBASE -->
    <TextView
        android:text="@string/txt_welcome"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:textAppearance="@style/txt_welcome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--TODO colocar foto do usuario-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo1"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:text="Editar Perfil"
            android:onClick="EditProfile"
            android:textStyle="bold"
            android:textColor="@color/button_text_color"
            android:backgroundTint="@color/button_background_color"/>

    </LinearLayout>

    <!--Tela onde mostra os tempos de utilização-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".screens.HomeActivity"
        android:background="@color/bg_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:text="RESUMO DE TEMPO DE APLICATIVOS USADOS"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="500dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_weight="1"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:gravity="center"
        android:onClick="buttonSignOutClick"
        android:text="@string/btn_signout"
        android:textStyle="bold"
        android:textColor="@color/button_text_color"
        android:backgroundTint="@color/button_background_color"/>
    </LinearLayout>

</LinearLayout>